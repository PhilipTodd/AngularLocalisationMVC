<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0/angular.min.js"></script>

    <script src="~/Scripts/vendor/rb-select-all-on-focus.js"></script>
    <script src="~/Scripts/vendor/ng-currency.js"></script>

    @{
        //string locale = "en-gb";
        string locale = "es";
        string scriptName = "Scripts/i18n/angular-locale_" + locale + ".js";
    }

    <script src="@scriptName"></script>

</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
